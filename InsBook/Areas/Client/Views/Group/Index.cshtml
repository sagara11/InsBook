
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Client/Views/Shared/Group.cshtml";
}
@section css {
    <link href="~/Assets/css/pages/group_gioithtieu.css" rel="stylesheet" />
}
@{
    Html.RenderPartial("~/Areas/Client/Views/Layout/header.cshtml");
}
<main>
    <div class="container_new">
        <div class="row">
            <div class="col-25">
                @{
                    Html.RenderPartial("~/Areas/Client/Views/Layout/group/group_sidebar.cshtml");
                }
            </div>
            <div class="col-50">
                @{
                    Html.RenderPartial("~/Areas/Client/Views/Layout/group/group_header.cshtml");
                }
                <!-- Mo ta nhom -->
                <section id="gioithieu" class="gioithieu-section">
                    <div class="section-header">
                        Giới thiệu về nhóm này
                    </div>
                    <div class="section-content">
                        <h5>Mô tả</h5>
                        <p>
                            Mô tả chi tiết
                        </p>
                        <div id="group-type">
                            Riêng tư
                        </div>
                    </div>
                </section>
                <!-- Thanh vien -->
                <section id="thanhvien" class="gioithieu-section">
                    <div class="section-header">
                        Thành viên . 3000
                    </div>
                    <div class="section-content">
                        <div id="friend-member">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <p class="mb-2">50 người bạn là thành viên</p>
                        <h5>
                            Quản trị viên và người kiểm duyệt
                        </h5>
                        <div id="admin">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" height="50px" width="50px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <div class="more">
                            <a class="d-block" href="">
                                Xem thêm
                            </a>
                        </div>
                    </div>
                </section>
                <!-- Bai viet hang dau -->
                <section id="thanhvien" class="gioithieu-section">
                    <div class="section-header">
                        Bài viết hàng đầu gần đây
                    </div>
                    <div class="section-content">

                    </div>
                </section>
                <!-- Anh -->
                <section id="anh" class="gioithieu-section">
                    <div class="section-header">
                        Ảnh
                    </div>
                    <div class="section-content">
                        <div class="image-box">
                            <img src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <div class="image-box">
                            <img src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <div class="image-box">
                            <img src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <div class="image-box">
                            <img src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <div class="image-box">
                            <img src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <div class="more">
                            <a class="d-block" href="">
                                Xem thêm
                            </a>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-25">
                <div class="fixed-side">
                    <!-- Messenger-section -->
                    @{
                        Html.RenderPartial("~/Areas/Client/Views/Layout/messenger/messenger_section.cshtml");
                    }
                    <!-- Them thanh vien -->
                    <section id="add-member">
                        <p class="add-header">
                            mời thành viên
                        </p>
                        <input class="form-control" type="text" placeholder="Nhập tên thành viên">
                        <p class="add-header">
                            thành viên
                        </p>
                        <div class="member-avatar d-flex">
                            <img class="rounded rounded-circle" width="35px" height="35px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" width="35px" height="35px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" width="35px" height="35px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                            <img class="rounded rounded-circle" width="35px" height="35px" src="~/Assets/media/78834391_459110258126325_6149001856166133760_n.jpg" alt="">
                        </div>
                        <p class="add-header">
                            mô tả
                        </p>
                        <div class="group-description">
                            Mô tả của nhóm
                        </div>
                        <p class="add-header">
                            loại nhóm
                        </p>
                        <div class="group-type">
                            Tổng quát
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
@{
    Html.RenderPartial("~/Areas/Client/Views/Layout/messenger/messenger.cshtml");
}
@section js{
    <script src="~/Assets/js/messenger.js"></script>
    <script src="~/Assets/js/newsfeed.js"></script>
    <script src="~/Assets/js/love_button.js"></script>
}

