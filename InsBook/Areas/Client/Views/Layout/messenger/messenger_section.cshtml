@{
    var Profile = (Model.Models.GetProfileModel)ViewBag.Profile;
    var userID = (Int32)ViewBag.Session_UserId;
    var userOnline = (List<Int32>)ViewBag.UserOnline;
}
<section id="messenger-section">
    <div class="message-header">
        <div id="people-message-btn" class="header-section">
            Bạn bè
        </div>
        <div id="group-message-btn" class="header-section">
            Nhóm
        </div>
    </div>
    <div id="people-message" class="message-body">
        @foreach (var friend in Profile.banbe)
        {
            if (userOnline.Contains(friend.banbe_id))
            {
                <div class="message-box" id="message-box-@friend.banbe_id">
                    <div class="message-avatar">
                        <img class="rounded rounded-circle" height="50px" width="50px" src="~/Images/@friend.banbe_anhdd" alt="">
                        <div>
                            <p><a href="/Client/Personal/Index/@friend.banbe_id">@friend.banbe_ten</a></p>
                            <p class="message-time">
                                <small>2 minutes ago</small> <small id="check-online-@friend.banbe_id"> Đang online</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="message-box">
                    <div class="message-avatar">
                        <img class="rounded rounded-circle" height="50px" width="50px" src="~/Images/@friend.banbe_anhdd" alt="">
                        <div>
                            <p><a href="/Client/Personal/Index/@friend.banbe_id">@friend.banbe_ten</a></p>
                            <p class="message-time">
                                <small>2 minutes ago</small> <small>Offline</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div id="group-message" class="message-body">
        <div class="message-box">
            <div class="message-avatar">
                <img class="rounded rounded-circle" height="50px" width="50px" src="/Images/nhom1.png" alt="">
                <div>
                    <p>
                        TIKTOK
                    </p>
                    <p class="message-time">
                        <small>2 minutes ago</small>
                    </p>
                </div>
            </div>
        </div>
        <div class="message-box">
            <div class="message-avatar">
                <img class="rounded rounded-circle" height="50px" width="50px" src="/Images/nhom4.png" alt="">
                <div>
                    <p> YOUTUBE</p>
                    <p class="message-time">
                        <small>2 minutes ago</small>
                    </p>
                </div>
            </div>
        </div>
        <div class="message-box">
            <div class="message-avatar">
                <img class="rounded rounded-circle" height="50px" width="50px" src="/Images/nhom5.png" alt="">
                <div>
                    <p>SNAPCHAT</p>
                    <p class="message-time">
                        <small>2 minutes ago</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>