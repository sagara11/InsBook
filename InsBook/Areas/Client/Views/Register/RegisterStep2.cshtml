@{
    ViewBag.Title = "RegisterStep1";
    Layout = "~/Areas/Client/Views/Shared/Newsfeed.cshtml";
}
@section css {
    <link href="~/Assets/css/layouts/header.css" rel="stylesheet" />
    <link href="~/Assets/css/layouts/footer.css" rel="stylesheet" />
}
@{
    Html.RenderPartial("~/Areas/Client/Views/Layout/header.cshtml");
}
<main>
    <div id="step-2">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <div id="check-progress-div">
                        <ul id="check-progress-bar">
                            <li class="check-progress-item visited"><a href="/Client/Register/RegisterStep1">Thêm bạn bè</a></li>
                            <li class="check-progress-item active"><a href="/Client/Register/RegisterStep2">Sửa ảnh đại diện</a></li>
                            <li class="check-progress-item next"><a href="/Client/Register/RegisterStep3">Hoàn thành</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-2">

                </div>
                <div class="col-md-8">
                    <div class="add-new-avatar">
                        <a href="/Client/Register/RegisterStep3" title="" class="btn btn-light button-tiep">Tiếp</a>
                        <h3>Tải lên một ảnh đại diện</h3>
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="avatar-frame">
                                        <img src="https://bdh131.files.wordpress.com/2012/10/freeman_defaultblue_bdh.gif" alt="" id="step-2-file-result">
                                    </div>
                                </div>
                                <div class=" col-md-6">
                                    <div class="d-flex align-items-center justify-content-center w-100 h-100">
                                        <div class="avatar-frame-tools">
                                            <input type="file" name="images" id="step-2-file" accept="image/*" onchange="cropImgFunc(event)" />
                                            <label for="step-2-file" class="btn btn-success"><i class="far fa-images"></i>Thêm ảnh</label>
                                            <hr>
                                            <p class="hoac">Hoặc</p>
                                            <button type="button" class="btn btn-light"><span>Chụp ảnh</span><small>Bằng webcam của bạn</small></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="result" id="inputImg">
                                    </div>
                                    <div id="slider" class="ep-slider-bar"></div>
                                    <div class="d-flex justify-content-center">
                                        <button type="button" class="btn btn-info" id="avatar-saved">Lưu</button>
                                        <button type="button" class="btn btn-danger" id="avatar-cancel">Hủy</button>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
                <div class="col-md-2">

                </div>
            </div>
        </div>
    </div>
</main>
@{
    Html.RenderPartial("~/Areas/Client/Views/Layout/footer.cshtml");
}
@section js{
    <script src="~/Assets/javascript/RegisterStep2.js"></script>
}